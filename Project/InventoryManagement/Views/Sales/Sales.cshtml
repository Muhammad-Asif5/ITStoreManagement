        function ConvertToMonth(value) {
            if (value == null) {
                return "";
            }
            else {
                var monthNames = ["Jab", "Feb", "March", "Apr", "May", "Jun",
                    "Jul", "Aug", "Sep", "Oct", "Nov", "Dec"
                ];
                var pattern = /Date\(([^)]+)\)/;
                var results = pattern.exec(value);
                var dt = new Date(parseFloat(results[1]));
                var completedate = monthNames[dt.getMonth()];
                return completedate = dt.getDay() + "/" + monthNames[dt.getMonth()] +"/"+ dt.getFullYear();

            }
        }

